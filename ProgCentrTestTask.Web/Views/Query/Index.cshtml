<div class="row">

    <div class="col-md-4">
        <div class="form-group">
            @Ajax.ActionLink("Добавить запрос", "Add", "Query", null,new AjaxOptions {UpdateTargetId = "content", LoadingElementId="loading_el" }, htmlAttributes: new { @class = "form-control btn btn-light" })
        </div>
        <div class="form-group">
            @Ajax.ActionLink("Выполненные запросы", "GetExecuted", "Query", null,new AjaxOptions {UpdateTargetId = "content", LoadingElementId="loading_el" }, htmlAttributes: new { @class = "form-control btn btn-light" })
        </div>
        <div class="form-group">
            @Ajax.ActionLink("Не выполненные запросы", "GetNotExecuted", "Query", null,new AjaxOptions {UpdateTargetId = "content", LoadingElementId="loading_el" }, htmlAttributes: new { @class = "form-control btn btn-light" })
        </div>
    </div>
    <div class="col-md-8">
        @Html.Partial("Loading")
        <div id="content"></div>
    </div>

</div>
