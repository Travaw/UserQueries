@model IEnumerable<ProgCentrTestTask.Web.Models.UserModel>


@if(Model.Count()==0){
<div>
    Пользователи не найдены
</div>
}
else{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Ajax.ActionLink("Запросы", "GetForUser", "Query", new { userId = item.Id }, new AjaxOptions { UpdateTargetId = "content" }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
}
